function TestMult:testMULTIPOLE()
  local cfg = ref_cfg "mult" {
    elm = [[
      multipole 'mult' {
        at=0, lrad=${lrad}, knl={
          ${bdir}*${k0},
          ${bdir}*${k1},
          ${bdir}*${k2},
          ${bdir}*${k3},
        }, ksl={
          ${bdir}*${k0s},
          ${bdir}*${k1s},
          ${bdir}*${k2s},
          ${bdir}*${k3s},
        }, ksi=${bdir}*${ksi}, fringe=0
      }
      ]],
    seql = 0,
    model  = {1},
    method = {2},
    nslice = {1},
    energy = {1, 6500},

    order = 6,

    tol = 1,

    lrad = { 0, 0.5, 1.5},
    k0   = {-0.15, 0, 0.2},
    k1   = {-0.15, 0, 0.2},
    k2   = \s -> s.cur_cfg.k0,
    k3   = \s -> s.cur_cfg.k1s,
    k0s  = {-0.15, 0, 0.2},
    k1s  = {-0.15, 0, 0.2},
    k2s  = \s -> s.cur_cfg.k0s,
    k3s  = \s -> s.cur_cfg.k1,
    ksi  = \s -> s.cur_cfg.lrad > 0 and {0, -0.15, 0.2} or {0},
    alist = tblcat(ref_cfg.alist, {"lrad", "k0", "k1", "k0s", "k1s", "ksi"}),

    plot_info = {
      title    = "Multipole NG v NG Maps",
      filename = "mult-ngvng.png",
      series   = default_plot_cfg.series,
      legend   = default_plot_cfg.legend,
    },
  }

  run_test(cfg)
end