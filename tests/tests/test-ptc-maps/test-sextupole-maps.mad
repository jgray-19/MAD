-- ../mad test-sext-maps.mad
-- assume ../madx64 to be present...

local object, tostring                                          in MAD
local tblcat                                                    in MAD.utility
local run_test, is_unittest, run_module in require("trackvsptc")

-- The setup for the tests ----------------------------------------------------o

local ref_cfg = object "ref" {
  -- How to run the tests
  dorun  = true, -- Default: true 
  dosave = false, -- Default: false
  doprnt = false, -- Default: false
  dodbg  = false, -- Default: false
  doplot = false, -- Default: false

  gen_utest = false, -- Default: false
  
  -- list of variables in the tests
  alist = {"model", "energy", "method", "nslice", "x0i"}, --attributes list
  tol = 1000,

  -- list of values that are used to run test but are not changed throughout
  order  = 4,        -- 2/4
  icase  = 56,       -- 56/6
  debug  = 0,        -- 0/6
  snm    = -1,
  seql   =  2,

  x0i    = 1..5,       -- 0, 4D, 5D, 5D strong, 6D (see get_mad_str)
}

local TestSextupole = {}

function TestSextupole:setUp()
  -- Turn off all unnecessary components for unit testing
  ref_cfg.gen_utest = false
  ref_cfg.dodbg     = false
  ref_cfg.doprnt    = false
  ref_cfg.dosave    = false
  
  -- Turn on the components for unit testing
  ref_cfg.dorun     = true
  ref_cfg.do_utest  = true
  ref_cfg.doplot    = true
end

-- The tests ------------------------------------------------------------------o
function TestSextupole:testSEXT() -- Test the body (~2 min)
  local cfg = ref_cfg "sext" {
    elm = "SEXTUPOLE, at=0.75, l=1.5, k2=${k2}, k2s=${k2s}, fringe=0",
    model  = 1..2,
    method = 2..8..2,    
    nslice = 1..3,
    energy = {1, 6500},  -- {1, 450, 6500}

    tol = 50,

    k2     = {-0.15, 0, 0.2},
    k2s    = {-0.15, 0, 0.2},
    alist = tblcat(ref_cfg.alist, {"k2", "k2s"}),

    plot_info = {
      x_axis_attr = "${k2}",
      title       = "Sextupole Body Comparison",
      series      = {
        "${method} == 2",
        "${method} == 4",
        "${method} == 6",
        "${method} == 8",
      },
      legend      = {
        y1 = "Method 2",
        y2 = "Method 4",
        y3 = "Method 6",
        y4 = "Method 8",
      },
      xrange      = {-0.2, 0.25},
      filename = "sext-body-comparision.png",
    }
  }
  run_test(cfg)
end

-- This test needs testing w/ fringe and frngmax
function TestSextupole:testSEXTm() -- Test the multipole (~2 min)
  local cfg = ref_cfg "sextm" {
    elm = [[
      SEXTUPOLE, at=0.75, l=1.5, k2=${k2}, k2s=${k2s}, tilt=${tilt}*pi/12,
      knl=${knl}, ksl=${ksl}, frngmax=${frngmax}, fringe=19, bend_fringe=true
    ]],
    
    tol = 150,

    model  = {1}, 
    method = {2},
    nslice = {1},
    energy = {1},      

    k2   = {0, 0.2},  -- Test just multipole first
    k2s  = \s->s.k2, !{0, -0.15, 0.2},  -- Test just multipole first
    knl  = {
      { }, 
      {0.05, 0.5, 5, 50},
    },

    ksl  = \s-> s.knl,
    tilt = 0..2,
    frngmax = 2..5,
    alist = tblcat(
      ref_cfg.alist, 
      {"tilt", "k2s", "k2", "ksl", "knl", "frngmax"}
    ),

    plot_info = \s-> {
      series = {
        "'${knl}' == '" .. tostring(s.knl[1]) .. "'",
        "'${knl}' == '" .. tostring(s.knl[2]) .. "'",
      },
      legend = {
        y1 = "knl = \\{" .. tostring(s.knl[1]) .. "\\}",
        y2 = "knl = \\{" .. tostring(s.knl[2]) .. "\\}",
      },
      title = "Sextupole Multipole Comparison",
      filename = "sext-mult-comparision.png",
    }
  }
  run_test(cfg)
end

function TestSextupole:testSEXTf() -- Test the fringe (~1 min)
  local cfg = ref_cfg "sextf" {
    elm = [[
      SEXTUPOLE, at=0.75, l=1.5, k2=${k2}, k2s=${k2s}, tilt=${tilt}*pi/12,
      fringe=${fringe}, f1=${f1}, f2=${f2}, frngmax=${frngmax},
    ]],
    
    tol = 25,

    model  = {1}, 
    method = {2},    
    nslice = {1},
    energy = {1},

    tilt   = 0..4,
    fringe = {0, 19},
    frngmax = 2..5,
    k2   = {0, 0.2},
    k2s  = \s->s.k2,
    f1   = {0, 0.5, -0.7},
    f2   = {0, -0.5, 0.7},
    alist = tblcat(
      ref_cfg.alist, {"tilt", "fringe", "k2", "k2s", "f1", "f2", "frngmax"}
    ),
    plot_info = {
      title       = "Sextupole Fringe Comparison",
      series      = {
        "${k2} == 0",
        "${k2} == 0.2",
      },
      legend      = {
        y1 = "k2 = 0",
        y2 = "k2 = 0.2",
      },
      filename    = "sext-fringe-comparision.png",
    }
  }
  run_test(cfg)
end

function TestSextupole:testSEXTh()
  local cfg = ref_cfg "sexth" {
    elm = [[
      SEXTUPOLE, at=0.75, l=1.5, k2=${k2}, k2s=${k2s}, tilt=${tilt}*pi/12,
      knl={${k0}}
    ]],
    
    tol = 25,
    
    model  = {1}, -- Use DKD as otherwise PTC broken
    method = {2},    
    nslice = {1},
    energy = {1},

    tilt   = 0..4,
    k2     = {0, 0.2},
    k2s    = \s->s.k2,
    k0     = {-0.05, 0, 0.05},
    
    alist = tblcat(ref_cfg.alist, {"tilt", "k2", "k2s", "k0"}),

    plot_info = {
      title       = "Sextupole with k0 Comparison",
      series      = {
        "${k0} == -0.05",
        "${k0} == 0",
        "${k0} == 0.05",
      },
      legend      = {
        y1 = "k0 = -0.05",
        y2 = "k0 = 0",
        y3 = "k0 = 0.05",
      },
      filename    = "sext-k0-comparision.png",
    }
  }
  run_test(cfg)
end

-- Need fint(x) and hgap here
function TestSextupole:testSEXTfh() -- MAD-NG does bend fringe for fringe=3
  local cfg = ref_cfg "sextfh" {
    elm = [[
      SEXTUPOLE, at=0.75, l=1.5, k2=${k2}, k2s=${k2s}, fringe=${fringe},
      knl={${k0}}, fint=${fint}, fintx=${fintx}, hgap=${hgap}, bend_fringe=true,
      frngmax=4
    ]],
    
    tol = 40,
    
    model  = {1},
    method = {2},
    nslice = {1},
    energy = {1},

    fringe      = {19},
    k2          = {0, 0.2},
    k2s         = \s->s.k2,
    k0          = {0, 0.05},
    fint        = {0, 0.4, 0.7}, 
    fintx       = {0, 0.3, 0.8},
    hgap        = {0, 0.04, 0.05},
    alist = tblcat(
      ref_cfg.alist, 
      {"k2", "k2s", "k0", "fringe", "fint", "fintx", "hgap"}
    ),

    plot_info = {
      title       = "Sextupole with k0 and fringe Comparison",
      series      = {
        "${k0} == 0",
        "${k0} == 0.05",
      },
      legend      = {
        y1 = "k0 = 0",
        y2 = "k0 = 0.05",
      },
      filename    = "sext-k0-fringe-comparision.png",
    }
  }
  run_test(cfg)
end

function TestSextupole:testSEXThe ()
  local cfg = ref_cfg "sexthe" {
    elm = [[
      SEXTUPOLE, at=0.75, l=1.5, k2=${k2}, k2s=${k2s}, fringe=19, frngmax=4,
      knl={${k0}}, e1=${e1}, e2=${e2}, h1=${h1}, h2=${h2}, bend_fringe=true
    ]],
    
    tol = 650,
    
    model  = {1},
    method = {2},
    nslice = {1},
    energy = {1},

    k2          = {0, 0.2},
    k2s         = \s->s.k2,
    k0          = {0, 0.05},
    e1          = {0, 0.4, 0.7}, 
    e2          = {0, 0.3, 0.8},
    h1          = {0, 0.04, 0.05},
    h2          = {0, 0.04, 0.05},
    alist = tblcat(
      ref_cfg.alist, 
      {"k2", "k2s", "k0", "e1", "e2", "h1", "h2"}
    ),

    plot_info = {
      title       = "Sextupole with face and fringe Comparison",
      series      = {
        "${e1} == 0 and ${e2} == 0",
        "${e1} ~= 0 or ${e2} ~= 0",
      },
      legend      = {
        y1 = "e1 = e2 = 0",
        y2 = "e1 != 0 or e2 != 0",
      },
      filename    = "sext-face-fringe-comparision.png",
    }
  }
  run_test(cfg)
end

-- Takes about 15 mins (utests take about 2 mins)
if not is_unittest then run_module(TestSextupole)
else                    _G.TestSextupole = TestSextupole
end