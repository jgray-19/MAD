local object                     in MAD
local tblcat                     in MAD.utility
local run_test                   in require("trackvsng")

-- The tests ------------------------------------------------------------------o
TestPatch = {}

function TestPatch:setUp()
  -- Turn off all unnecessary components for unit testing
  ref_cfg.dodbg     = false
  ref_cfg.doprnt    = false
  ref_cfg.dosave    = false
  
  -- Turn on the components for unit testing
  ref_cfg.dorun     = true
  ref_cfg.do_utest  = true
  ref_cfg.doplot    = true
end

function TestPatch:testROTATION()
  local cfg = ref_cfg "rot" {
    elm = "${dir}rotation 'rot' {at=${at}, angle=${tdir}*math.pi/${_angle}}",
    model  = {1},
    method = {2},
    nslice = {1},
    energy = {1, 6500},

    tol =  15,

    at    = {0.05, 0.25, 0.75, 1},
    _angle= {10, 50, 100, 330, 500, 1000},
    dir   = {"x", "y", "s"},
    alist = tblcat(ref_cfg.alist, {"dir", "at", "_angle"}),

    plot_info = {
      title    = "Rotation NG v NG Maps",
      filename = "rot-ngvng.png",
    },
  }

  run_test(cfg)
end

